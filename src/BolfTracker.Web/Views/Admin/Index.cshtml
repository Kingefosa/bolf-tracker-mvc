@{
  ViewBag.Title = "Admin - Bolf Tracker";
}
<div class="page-header">
  <div class="row">
    <div class="span8">
      <h1>
        Admin Functions</h1>
    </div>
  </div>
</div>
<h2>
  Calculate Game Statistics <small>Calculates game statistics for month and year or
    zero for all.</small></h2>
@using (Html.BeginForm("CalculateGameStatistics", "Admin", FormMethod.Post, new { @class = "form-stacked" }))
{ 
  <fieldset>
    <legend></legend>
    <label for="game-stats-month">
      Month
    </label>
    <input type="number" name="month" id="game-stats-month" value="@DateTime.Today.Month" />
    <label for="game-stats-year">
      Year
    </label>
    <input type="number" name="year" id="game-stats-year" value="@DateTime.Today.Year" />
  </fieldset>
  <input type="submit" value="Calculate" class="btn" />
}
