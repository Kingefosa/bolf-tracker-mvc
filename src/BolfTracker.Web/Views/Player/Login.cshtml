@{
    ViewBag.Title = "Login - Bolf Tracker";
}
<h2>
    Login</h2>
@using (Html.BeginForm("Authenticate", "Player", FormMethod.Post))
{ 
    <div>
        <label>
            Enter Private Beta Code:</label><input type="password" id="private-beta-code" name="password" />
    </div>
    
    <input type="submit" value="Play Bolf!" />
}
@section javascript
{
    <script type="text/javascript">
        $(function () {
            $("#private-beta-code").focus();
        });
    </script>
}