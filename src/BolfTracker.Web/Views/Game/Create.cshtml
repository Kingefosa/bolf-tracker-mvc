@model BolfTracker.Models.Game
@{    
  ViewBag.Title = "Create Game - Bolf Tracker";
}
<h1>
  Create Game</h1>
@using (Html.BeginForm("Create", "Game", FormMethod.Post, new { @class = "form-stacked" }))
{
  @Html.LabelFor(model => model.Date)
  @Html.TextBoxFor(model => model.Date, new { @class = "date" })
  <div class="actions">
    <input type="submit" class="btn primary" value="Create" />
  </div>
}