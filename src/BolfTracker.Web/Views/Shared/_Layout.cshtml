<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>@ViewBag.Title</title>
  <link href="@Url.Content("~/content/bootstrap-1.4.0.min.css")" rel="stylesheet" type="text/css" />
  <style type="text/css">
    html, body
    {
      background: url('@Url.Content("~/content/images/background.png")');
    }
    body
    {
      margin-top: 40px;
    }
    input[type="text"], input[type="number"], select
    {
      margin-bottom: 10px;
    }
    .content
    {
      background-color: #fff;
      padding: 20px;
      margin: 0 -20px;
      min-height: 500px;
      -webkit-border-radius: 0 0 5px 5px;
      -moz-border-radius: 0 0 5px 5px;
      border-radius: 0 0 5px 5px;
      -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
      -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
      box-shadow: 0 1px 2px rgba(0,0,0,.15);
    }
    .container > footer
    {
        color: #777;
        margin: 0;
        border-top: 0px;
        padding-bottom: 10px;
    }
  </style>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
  @MvcMiniProfiler.MiniProfiler.RenderIncludes()
  @RenderSection("javascriptrefs", required: false)
  @if (!HttpContext.Current.Request.IsLocal) {
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-27886560-1']);
      _gaq.push(['_trackPageview']);
      (function () {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  }
</head>
<body>
  <div class="topbar">
    <div class="topbar-inner">
      <div class="container">
        @Html.ActionLink("Bolf Tracker", "Index", "Home", null, new { @class = "brand" })
        <ul class="nav">
          <li>@Html.ActionLink("Rankings", "Index", "Ranking")</li>
          <li>@Html.ActionLink("Games", "Index", "Game")</li>
          <li>@Html.ActionLink("Players", "Index", "Player")</li>
          <li>@Html.ActionLink("Holes", "Index", "Hole")</li>
        </ul>
        <ul class="nav secondary-nav">
          @if (HttpContext.Current.User.Identity.IsAuthenticated)
          { <li>@Html.ActionLink("Admin", "Index", "Admin")</li> }
          <li><strong>@(HttpContext.Current.User.Identity.IsAuthenticated ? Html.ActionLink("Logout", "SignOut", "Player") : Html.ActionLink("Login", "Login", "Player"))</strong></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="content">
      @RenderBody()
    </div>
    <footer>
      <p>
        Designed and built by <a href="http://twitter.com/mkchandler">@@mkchandler</a> and
        friends.<br />
        Code licensed under the <a href="https://raw.github.com/mkchandler/bolf-tracker-mvc/master/license.txt">
          MIT License</a> and is available on <a href="https://github.com/mkchandler/bolf-tracker-mvc">
            GitHub</a>.
      </p>
    </footer>
  </div>
  @RenderSection("javascript", required: false)
</body>
</html>
