<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/styles.css")" rel="stylesheet" type="text/css" />
    <script src="http://code.jquery.com/jquery-1.6.2.min.js" type="text/javascript"></script>
    @RenderSection("javascriptrefs", required: false)
</head>
<body>
    <header>
        <h1>
            Bolf Tracker</h1>
        @Html.ActionLink("Sign Out", "SignOut", "Player")
        <nav>
            <ul>
                <li>@Html.ActionLink("Rankings", "Index", "Ranking")</li>
                <li>@Html.ActionLink("Games", "Index", "Game")</li>
                <li>@Html.ActionLink("Players", "Index", "Player")</li>
                <li>@Html.ActionLink("Holes", "Index", "Hole")</li>
            </ul>
        </nav>
    </header>
    <section id="content">
        @RenderBody()
    </section>
    <footer>
    </footer>
    @RenderSection("javascript", required: false)
</body>
</html>
